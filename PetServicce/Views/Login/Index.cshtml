<body>
    <h1 style="text-align:center">Informações de clientes</h1>
    <h5 style="text-align:center">Area do Administrador</h5>
    <p>

    </p>
    <table class="table table-bordered">
        <thead style="background-color:darkgray">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.NumeroContato)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Senha)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroContato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereco)
                    </td>
