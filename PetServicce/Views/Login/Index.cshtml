                        <button class="btn btn-primary"> <a style="color:whitesmoke" asp-action="Details" asp-route-id="@item.Cpf">Detalhes</a> </button> |
                        <button class="btn btn-danger">  <a style="color:whitesmoke" asp-action="Delete" asp-route-id="@item.Cpf">Excluir</a> </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

